<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Profile.FragmentProfile"
    android:background="#ececec"
    android:id="@+id/fragment_profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:scaleType="fitXY"
                    android:src="@drawable/topbackgr"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="114dp"
                    android:layout_height="107dp"
                    android:src="@drawable/person_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView14"
                    app:layout_constraintEnd_toEndOf="@+id/imageView14"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="@+id/imageView14"
                    app:layout_constraintTop_toBottomOf="@+id/imageView14"
                    app:layout_constraintVertical_bias="0.523" />

                <TextView
                    android:id="@+id/textname"
                    android:layout_width="361dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="HUY Trần"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/imageView15"
                    app:layout_constraintHorizontal_bias="0.461"
                    app:layout_constraintStart_toStartOf="@+id/imageView15"
                    app:layout_constraintTop_toBottomOf="@+id/imageView15" />

                <TextView
                    android:id="@+id/textsdt"
                    android:layout_width="153dp"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:hint="0308092971"

                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/textname"
                    app:layout_constraintHorizontal_bias="0.506"
                    app:layout_constraintStart_toStartOf="@+id/textname"
                    app:layout_constraintTop_toBottomOf="@+id/textname" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/textsdt"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="40dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/home_icon" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnHomepage"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="Quản lý trường học"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="60dp"
                            android:background="@drawable/custom_button_background"
                            android:layout_marginBottom="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="40dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/notification_icon" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnThongbao"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="Trung tâm thông báo"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="60dp"
                            android:background="@drawable/custom_button_background"
                            android:layout_marginBottom="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="40dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/question" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnquestion"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="Câu hỏi thường gặp"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="60dp"
                            android:background="@drawable/custom_button_background"
                            android:layout_marginBottom="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView111"
                            android:layout_width="40dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"

                            android:src="@drawable/l" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/Logout"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="Đăng xuất"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="60dp"
                            android:background="@drawable/custom_button_background"
                            android:layout_marginBottom="10dp" />
                    </LinearLayout>


<!--                        <androidx.appcompat.widget.AppCompatButton-->
<!--                            android:id="@+id/button2"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="60dp"-->
<!--                            android:layout_marginStart="50dp"-->
<!--                            android:layout_marginTop="10dp"-->
<!--                            android:layout_marginEnd="50dp"-->
<!--                            android:layout_marginBottom="10dp"-->

<!--                            android:text="Quản lý trường học" />-->



                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>